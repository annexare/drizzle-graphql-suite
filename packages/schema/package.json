{
  "name": "@drizzle-graphql-suite/schema",
  "version": "0.6.0",
  "type": "module",
  "description": "GraphQL schema builder with CRUD operations, relation filtering, and hooks from Drizzle ORM",
  "license": "MIT",
  "author": "https://github.com/dmythro",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/annexare/drizzle-graphql-suite.git",
    "directory": "packages/schema"
  },
  "homepage": "https://github.com/annexare/drizzle-graphql-suite/tree/main/packages/schema#readme",
  "keywords": [
    "drizzle",
    "graphql",
    "schema",
    "orm",
    "postgresql",
    "crud",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target browser --external drizzle-orm --external graphql --external graphql-parse-resolve-info && tsc -p tsconfig.build.json",
    "check-types": "tsc --noEmit",
    "test": "bun test"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.44.0",
    "graphql": ">=16.3.0"
  },
  "dependencies": {
    "graphql-parse-resolve-info": "4.14.1"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "drizzle-orm": "0.45.1",
    "graphql": "16.12.0",
    "typescript": "5.9.3"
  }
}
