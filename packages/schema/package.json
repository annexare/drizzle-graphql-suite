{
  "name": "@drizzle-graphql-suite/schema",
  "type": "module",
  "description": "GraphQL schema builder with CRUD operations, relation filtering, and hooks from Drizzle ORM",
  "keywords": [
    "drizzle",
    "graphql",
    "schema",
    "orm",
    "postgresql",
    "crud",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target browser && tsc -p tsconfig.build.json",
    "check-types": "tsc --noEmit",
    "test": "bun test"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.44.0",
    "graphql": ">=16.3.0"
  },
  "dependencies": {
    "graphql-parse-resolve-info": "4.14.1"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "drizzle-orm": "0.45.1",
    "graphql": "16.12.0",
    "typescript": "5.9.3"
  }
}
